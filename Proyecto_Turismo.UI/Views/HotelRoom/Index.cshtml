@model IEnumerable<ListHotelRoomDTO>

<h1>Habitaciones de Hotel</h1>

<a href="@Url.Action("Create", "HotelRoom")" class="btn btn-primary mb-3">Agregar Nueva Habitación</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Número de Habitaciones</th>
            <th>Tipo de Habitación</th>
            <th>Capacidad</th>
            <th>Precio</th>
            <th>Disponible</th>
            <th>Imagenes</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.NumeroHabitaciones</td>
                <td>@room.TipoHabitacion</td>
                <td>@room.Capacidad</td>
                <td>@room.Precio</td>
                <td>@room.Disponible</td>
                <td>
                    @if (room.Imagen != null)
                    {
                        var imageBase64 = Convert.ToBase64String(room.Imagen);
                        var imgSrc = String.Format("data:image/jpeg;base64,{0}", imageBase64);
                        <img src="@imgSrc" width="100" height="100" />
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "HotelRoom", new { id = room.Id })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="@Url.Action("Delete", "HotelRoom", new { id = room.Id })" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
