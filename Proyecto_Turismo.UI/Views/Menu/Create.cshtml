@model CreateMenuViewModel

@{
    ViewData["Title"] = "Crear Menú";
}

<link href="~/css/menu.css" rel="stylesheet" />

<div class="container create_container">
    <h1>Crear Menú</h1>

    <form asp-action="Create" method="post">
        <div class="form-group input_create">
            <label asp-for="Menus.Nombre">Nombre del Menú</label>
            <input asp-for="Menus.Nombre" class="form-control" />
            <span asp-validation-for="Menus.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Crear Menú" class="btn btn-outline-success"/>
            <a href="@Url.Action("Index", "Menu")" class="btn btn-outline-secondary">Volver al Menú</a>
        </div>
    </form>
</div>
