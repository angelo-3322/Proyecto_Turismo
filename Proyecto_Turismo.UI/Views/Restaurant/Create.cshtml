@model CreateRestaurantViewModel

@{
    ViewData["Title"] = "Crear Restaurante";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Restaurants.Nombre"></label>
        <input asp-for="Restaurants.Nombre" class="form-control" />
        <span asp-validation-for="Restaurants.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurants.IdMenu">Menu</label>
        <select asp-for="Restaurants.IdMenu" asp-items="@(new SelectList(Model.menus, "Id", "Nombre"))" class="form-control">
            <option value="">-- Seleccione un Menú --</option>
        </select>
        <span asp-validation-for="Restaurants.IdMenu" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
