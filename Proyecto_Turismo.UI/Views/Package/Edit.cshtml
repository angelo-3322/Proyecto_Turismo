@model EditPackageViewModel

@{
    ViewBag.Title = "Editar Paquete";
}
<link href="~/css/restaurant2.css" rel="stylesheet" />
<div class="container edit_container">

    <h1>Editar Paquete</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group input_edit">
            <label asp-for="@Model.Nombre">Nombre</label>
            <input asp-for="@Model.Nombre" class="form-control" />
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group input_edit">
            <label asp-for="Descripcion">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group input_edit">
            <label asp-for="Precio">Precio</label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar paquete" class="btn btn-outline-success" />
            <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
        </div>
    </form>

  
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
